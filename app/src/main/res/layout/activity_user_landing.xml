<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.suyash.com.demoyoutube.views.ScrollableTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"/>

    <LinearLayout
        android:id="@+id/buddy_menu_filter_clear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:background="#80FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buddy_menu_selected_filters_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginStart="@dimen/size_8"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"

            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:id="@+id/buddy_menu_clear_filters_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginStart="@dimen/size_8"
            android:padding="@dimen/size_5"
            />

    </LinearLayout>



        <android.suyash.com.demoyoutube.views.NonSwipableViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>